        <!--android:id="@+id/sv_progress"-->
        <!--android:layout_width="240dp"-->
        <!--android:layout_height="240dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--/>-->
    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        >
        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle6"
            />
        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"

             />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle4"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="甲醛"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="32sp"
                />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="16sp"


                />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_2"
        android:layout_marginTop="20dp"

        >
        <ImageButton
            android:id="@+id/ib_ring"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/icon_ring"
            android:background="@drawable/circle7"
            android:scaleType="fitXY"
            android:visibility="invisible"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="21.6°C"
            android:layout_toLeftOf="@id/ib_ring"
            android:layout_centerVertical="true"
            android:visibility="invisible"
        />
        <TextView
            android:id="@+id/tv_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="--"
            android:layout_toRightOf="@id/ib_ring"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            />

    </RelativeLayout>
    <ImageButton
        android:id="@+id/iv_emotion"
        android:src="@drawable/icon_cry_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:background="#AAC0C0C0"
        android:visibility="invisible"/>
    <!-- index area-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_alignParentBottom="true"
    android:background="#77000000"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:gravity="center|center"
    >

    <!--area 1 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="温度"
                />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_temp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--°C"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--"
                android:id="@+id/tv_temp_eval"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>
    <!-- splitter -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/split"/>
    <!--area 2 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="PM2.5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/tv_pm"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--"
                android:id="@+id/tv_pm_eval"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>

    <!-- splitter -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/split"/>
    <!--area 3 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="湿度"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:id="@+id/tv_hum"
                android:text="--%"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--"
                android:id="@+id/tv_hum_eval"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



</RelativeLayout>


</RelativeLayout>
