<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.worldlink.locker.activity.MainActivity_"
    android:background="@color/black">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_app_1"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:id="@+id/ib_device"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_diaper_alert"
        android:background="@color/transparent"
        android:scaleType="centerInside"/>
    <ImageButton
        android:id="@+id/ib_setting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="onAnimationStyle"
        android:src="@drawable/icon_settings"
        android:background="@color/transparent"/>
    <org.demo.ballprogress.view.SinkView
        android:id="@+id/sv_progress"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sv_progress"
        android:layout_marginTop="50dp"

        >
        <ImageButton
            android:id="@+id/ib_ring"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:src="@drawable/icon_ring"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="21.6Â°C"
            android:layout_toLeftOf="@id/ib_ring"
            android:layout_centerVertical="true"
        />
        <TextView
            android:id="@+id/tv_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="--"
            android:layout_toRightOf="@id/ib_ring"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <ImageButton
        android:id="@+id/iv_emotion"
        android:src="@drawable/icon_cry_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:background="#AAC0C0C0"
        android:visibility="invisible"/>

