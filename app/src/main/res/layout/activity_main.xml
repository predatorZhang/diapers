        <!--/>-->
    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/iv_circle_middle_outer"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle6"
            />
        <ImageView
            android:id="@+id/iv_circle_middle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"

             />

        <ImageView
            android:id="@+id/iv_circle_middle_inner"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle4"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="甲醛"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_index_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="32sp"
                />

            <TextView
                android:id="@+id/tv_unit_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="16sp"


                />
        </LinearLayout>

    </RelativeLayout>

    <!-- left index -->
    <!-- pm 10 -->
    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_alignParentLeft="true"
        >
        <!--circle 1-->
        <ImageView
            android:id="@+id/iv_circle_left_outer"
            android:layout_width="@dimen/uidesign_index_secondary_circle1_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle1_height"
            android:src="@drawable/circle6"
            android:layout_centerInParent="true"
            />
        <!--circle 2-->
        <ImageView
            android:id="@+id/iv_circle_left"
            android:layout_width="@dimen/uidesign_index_secondary_circle2_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle2_height"
            android:layout_centerInParent="true"
            />
        <!--circle 3-->
        <ImageView
            android:id="@+id/iv_circle_left_inner"
            android:layout_width="@dimen/uidesign_index_secondary_circle3_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle3_height"
            android:src="@drawable/circle4"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="PM 10"
                android:textSize="@dimen/uidesign_index_secondary_title_size"
                />
            <TextView
                android:id="@+id/tv_index_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="@dimen/uidesign_index_secondary_value_size"
                />

            <TextView
                android:id="@+id/tv_unit_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="ug/m3"
                android:textSize="@dimen/uidesign_index_secondary_unit_size"


                />
        </LinearLayout>

    </RelativeLayout>

    <!-- right index -->
    <!-- pm 1.0 -->
    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:id="@+id/iv_circle_right_outer"
            android:layout_width="@dimen/uidesign_index_tertiary_circle1_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle1_height"
            android:src="@drawable/circle6"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_circle_right"
            android:layout_width="@dimen/uidesign_index_tertiary_circle2_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle2_height"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/iv_circle_right_inner"
            android:layout_width="@dimen/uidesign_index_tertiary_circle3_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle3_height"
            android:src="@drawable/circle4"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="PM 2.5"
                android:textSize="@dimen/uidesign_index_secondary_title_size"
                />
            <TextView
                android:id="@+id/tv_index_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="@dimen/uidesign_index_secondary_value_size"
                />

            <TextView
                android:id="@+id/tv_unit_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="@dimen/uidesign_index_secondary_unit_size"


                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_middle"
        android:layout_marginTop="20dp"

        >
        <ImageButton
            android:id="@+id/ib_device"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:visibility="visible"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="21.6°C"
            android:layout_toLeftOf="@id/ib_device"
            android:layout_centerVertical="true"
            android:visibility="invisible"
        />
        <TextView
            android:id="@+id/tv_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="--"
            android:layout_toRightOf="@id/ib_device"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            />

    </RelativeLayout>
    <ImageButton
        android:id="@+id/iv_emotion"
        android:src="@drawable/icon_cry_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:background="#AAC0C0C0"
        android:visibility="invisible"/>

    <!--weather-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/rl_index"
        android:background="#77000000"
        >
        <ImageButton
            android:id="@+id/ib_weather"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_weather_sunny"
            android:background="@drawable/circle8"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:id="@+id/ll_weather_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ib_weather"
            android:layout_alignTop="@id/ib_weather"
            android:gravity="left|center">

          <!--  <ImageButton
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:paddingLeft="10dp"
                android:scaleType="centerInside"
                android:background="@drawable/location"
                android:visibility="visible"/>-->

            <TextView android:id="@+id/wetrtv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="-"
                android:textColor="@android:color/white"
                />
            <TextView android:id="@+id/wetrtv_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="空气质量:-"
                android:textColor="@android:color/white"
                />
            <TextView android:id="@+id/wetrtv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="-"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ll_weather_1"
            android:layout_toRightOf="@id/ib_weather">
            <TextView android:id="@+id/wetr_tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="温度:-°C"
                android:textColor="@android:color/white"
                />
            <TextView android:id="@+id/wetr_tv_humid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="湿度:-%"
                android:textColor="@android:color/white"
                />
            <TextView android:id="@+id/wetr_tv_pm25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="PM2.5:-"
                android:textColor="@android:color/white"
                />
            <TextView android:id="@+id/wetr_tv_pm10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="PM10:-"
                android:textColor="@android:color/white"
                />

        </LinearLayout>
    </RelativeLayout>

    <!-- index area-->
<RelativeLayout
    android:id="@id/rl_index"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_alignParentBottom="true"
    android:background="#77000000"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:gravity="center|center"
    >

    <!--area 1 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="温度"
                />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_temp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--°C"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--"
                android:id="@+id/tv_temp_eval"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>
    <!-- splitter -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/split"/>
    <!--area 2 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="PM1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/tv_pm1"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--"
                android:id="@+id/tv_pm1_eval"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>

    <!-- splitter -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/split"/>
    <!--area 3 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="湿度"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:id="@+id/tv_hum"
                android:text="--%"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="--"
                android:id="@+id/tv_hum_eval"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



</RelativeLayout>


</RelativeLayout>
