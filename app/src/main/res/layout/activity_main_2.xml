<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.worldlink.locker.activity.MainActivity"
    android:background="@color/black">
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_16"
        android:scaleType="centerCrop"/>


    <ImageButton
        android:id="@+id/ib_device"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/btn_dashborad"
        android:background="@color/transparent"
        android:scaleType="centerInside"/>
    <ImageButton
        android:id="@+id/ib_setting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="onAnimationStyle"
        android:src="@drawable/icon_settings"
        android:background="@color/transparent"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_battery_half"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"/>
    <!--<org.demo.ballprogress.view.SinkView-->
        <!--android:id="@+id/sv_progress"-->
        <!--android:layout_width="240dp"-->
        <!--android:layout_height="240dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--/>-->
    <!-- middle index -->
    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/circle6"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_circle_middle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/circle4"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="CH2O"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_index_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="32sp"
                />

            <TextView
                android:id="@+id/tv_unit_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="16sp"


                />
        </LinearLayout>

    </RelativeLayout>
    <!-- left index -->
    <!-- pm 10 -->
    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_alignParentLeft="true"
        >
        <!--circle 1-->
        <ImageView
            android:layout_width="@dimen/uidesign_index_secondary_circle1_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle1_height"
            android:src="@drawable/circle6"
            android:layout_centerInParent="true"
            />
        <!--circle 2-->
        <ImageView
            android:id="@+id/iv_circle_left"
            android:layout_width="@dimen/uidesign_index_secondary_circle2_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle2_height"
            android:layout_centerInParent="true"
            />
        <!--circle 3-->
        <ImageView
            android:layout_width="@dimen/uidesign_index_secondary_circle3_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle3_height"
            android:src="@drawable/circle4"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="PM 10"
                android:textSize="@dimen/uidesign_index_secondary_title_size"
                />
            <TextView
                android:id="@+id/tv_index_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="@dimen/uidesign_index_secondary_value_size"
                />

            <TextView
                android:id="@+id/tv_unit_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="@dimen/uidesign_index_secondary_unit_size"


                />
        </LinearLayout>

    </RelativeLayout>

    <!-- right index -->
    <!-- pm 1.0 -->
    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="@dimen/uidesign_index_tertiary_circle1_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle1_height"
            android:src="@drawable/circle6"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_circle_right"
            android:layout_width="@dimen/uidesign_index_tertiary_circle2_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle2_height"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:layout_width="@dimen/uidesign_index_tertiary_circle3_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle3_height"
            android:src="@drawable/circle4"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="PM 1.0"
                android:textSize="@dimen/uidesign_index_secondary_title_size"
                />
            <TextView
                android:id="@+id/tv_index_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="@dimen/uidesign_index_secondary_value_size"
                />

            <TextView
                android:id="@+id/tv_unit_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="@dimen/uidesign_index_secondary_unit_size"


                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_middle"
        android:layout_marginTop="50dp"

        >
        <ImageButton
            android:id="@+id/ib_ring"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/icon_ring"
            android:background="@drawable/circle7"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="21.6°C"
            android:layout_toLeftOf="@id/ib_ring"
            android:layout_centerVertical="true"
            android:visibility="invisible"
        />
        <TextView
            android:id="@+id/tv_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="--"
            android:layout_toRightOf="@id/ib_ring"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            />

    </RelativeLayout>
    <ImageButton
        android:id="@+id/iv_emotion"
        android:src="@drawable/icon_cry_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:background="#AAC0C0C0"
        android:visibility="invisible"/>
    <!-- index area-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_alignParentBottom="true"
    android:background="#77000000"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:gravity="center|center"
    >

    <!--area 1 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="Temp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_value_label_textsize"
                android:text="23°C"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="Good"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>
    <!-- splitter -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/split"/>
    <!--area 2 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="PM2.5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_value_label_textsize"
                android:text="123"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="Good"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>

    <!-- splitter -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/split"/>
    <!--area 3 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center"
        >
        <LinearLayout
            android:layout_width="@dimen/uidesign_linear_label_width"
            android:layout_height="@dimen/uidesign_linear_label_height"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/uidesign_index_label_textsize"
                android:text="Humidity"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="32%"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center"
            >
            <TextView
                android:layout_width="@dimen/uidesign_index_label_width"
                android:layout_height="@dimen/uidesign_index_label_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/uidesign_index_state_label_textsize"
                android:text="Good"
                android:background="@drawable/oval"
                android:gravity="center|center"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



</RelativeLayout>


</RelativeLayout>
