<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.worldlink.locker.activity.MainActivity"
    android:background="@color/black">
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_16"
        android:scaleType="centerCrop"/>

    <!-- middle index -->
    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/circle6"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_circle_right"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/circle4"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="PM 1.0"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_index_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="32sp"
                />

            <TextView
                android:id="@+id/tv_unit_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="16sp"


                />
        </LinearLayout>

    </RelativeLayout>


    <!-- left index -->
    <!-- pm 10 -->
    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_alignParentLeft="true"
        >
        <!--circle 1-->
        <ImageView
            android:layout_width="@dimen/uidesign_index_secondary_circle1_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle1_height"
            android:src="@drawable/circle6"
            android:layout_centerInParent="true"
            />
        <!--circle 2-->
        <ImageView
            android:id="@+id/iv_circle_left"
            android:layout_width="@dimen/uidesign_index_secondary_circle2_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle2_height"
            android:layout_centerInParent="true"
            />
        <!--circle 3-->
        <ImageView
            android:layout_width="@dimen/uidesign_index_secondary_circle3_width"
            android:layout_height="@dimen/uidesign_index_secondary_circle3_height"
            android:src="@drawable/circle4"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="PM 10"
                android:textSize="@dimen/uidesign_index_secondary_title_size"
                />
            <TextView
                android:id="@+id/tv_index_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="@dimen/uidesign_index_secondary_value_size"
                />

            <TextView
                android:id="@+id/tv_unit_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="@dimen/uidesign_index_secondary_unit_size"


                />
        </LinearLayout>

    </RelativeLayout>

    <!-- right index -->
    <!-- pm 1.0 -->
    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="@dimen/uidesign_index_tertiary_circle1_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle1_height"
            android:src="@drawable/circle6"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_circle_middle"
            android:layout_width="@dimen/uidesign_index_tertiary_circle2_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle2_height"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:layout_width="@dimen/uidesign_index_tertiary_circle3_width"
            android:layout_height="@dimen/uidesign_index_tertiary_circle3_height"
            android:src="@drawable/circle4"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center|center">
            <TextView
                android:id="@+id/tv_title_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="CH2O"
                android:textSize="@dimen/uidesign_index_secondary_title_size"
                />
            <TextView
                android:id="@+id/tv_index_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="--"
                android:textSize="@dimen/uidesign_index_secondary_value_size"
                />

            <TextView
                android:id="@+id/tv_unit_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="mg/m3"
                android:textSize="@dimen/uidesign_index_secondary_unit_size"


                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
